<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.assistant.AssistantFragment">
    <Button
            android:text="Send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendbutton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="71dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.806" app:layout_constraintStart_toStartOf="@+id/thankyoutext"
            app:layout_constraintTop_toTopOf="@+id/answer" app:layout_constraintHorizontal_bias="0.91"/>
    <EditText
            android:layout_width="321dp"
            android:layout_height="106dp"
            android:inputType="textPersonName"
            android:text="hey whats your name?"
            android:ems="10"
            android:textSize="28sp"
            android:id="@+id/messageBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="13dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="13dp"
            app:layout_constraintTop_toBottomOf="@id/answer" tools:ignore="HardcodedText"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.852"/>
    <TextView
            android:text="Thanks For using our serivce."
            android:layout_width="372dp"
            android:layout_height="172dp" android:id="@+id/thankyoutext" tools:ignore="HardcodedText"
            android:layout_marginBottom="545dp" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="25sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/messageBox" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Answer appears here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5sp"
            android:padding="30sp"
            android:id="@+id/answer"
            app:layout_constraintTop_toBottomOf="@+id/thankyoutext"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginBottom="356dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="HardcodedText"
            app:layout_constraintVertical_bias="0.141"/>
    <ImageView
            android:src="@mipmap/mic_foreground"
            android:layout_width="58dp"
            android:layout_height="51dp" android:id="@+id/assistantmic"
            app:layout_constraintTop_toBottomOf="@+id/thankyoutext"
            app:layout_constraintEnd_toStartOf="@+id/sendbutton" android:layout_marginBottom="78dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="189dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="7dp" app:layout_constraintVertical_bias="0.833"
            app:layout_constraintHorizontal_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>